<!-- res/layout/fragment_home.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TVMyLists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:hint="הרשימות שלי"
        android:padding="10dp" />

    <!-- Floating Action Button (FAB) on the left bottom -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bMoveToMyShopList"
        android:layout_width="90dp"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/plus" />

    <!-- RecyclerView with left margin -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAllLists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/TVMyLists"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"/>

</RelativeLayout>
